rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated(){
      return request.auth.uid != null;
    }
    match /foods/{foodId} {
      allow read: if true;
      allow write: if isAuthenticated()
    }
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated()
    }
  }
}
